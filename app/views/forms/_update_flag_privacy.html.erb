<%= render 'common_fields' %>
<div><span class="label">PromoID:</span><input type="text" size="20" name="PromoID" value="<%= session["PromoID"] %>"></div>
<div class="container">
	<div class="field-column">
		<span class="label">Deactivation Method</span><input type="text" size="20" name="DeActivation_Method" value="<%= session["DeActivation_Method"] %>">
	</div>
	<div class="caption-column">
		<p>Valori possibili:</p>
		<ul>
			<li>DISIMM: disattivazione immediata</li>
			<li>DISSCH: disattivazione schedulata</li>
		</ul>
	</div>
</div>


<div><span class="label">NotificationSMS</span>
		<select name="NotificationSMS">
			<option value="0">Nessuna notifica</option>
			<option value="1" selected="selected">Solo dispositive</option>
			<option value="2" >Login, Dispositive, Report</option>
		</select>
</div>

<div><span class="label">NotificationMAIL:</span>
		<select name="NotificationMAIL">
			<option value="0">Nessuna notifica</option>
			<option value="1" selected="selected">Solo dispositive</option>
			<option value="2" >Login, Dispositive, Report</option>
		</select>
</div>

<div><span class="label">AdvertisingFlag:</span>
		<select name="AdvertisingFlag">
			<option value="False" selected="selected">False</option>
			<option value="True" >True</option>
		</select>
	</div>

<div><span class="label">MarketingFlag:</span>
		<select name="MarketingFlag">
			<option value="False" selected="selected">False</option>
			<option value="True" >True</option>
		</select>
	</div>

<div><span class="label">&nbsp;</span><input type="submit" value="SUBMIT"></div>
